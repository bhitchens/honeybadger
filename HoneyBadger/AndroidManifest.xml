<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.honeybadger"
    android:versionCode="16"
    android:versionName="3.4" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:theme="@style/Theme.NoBackground"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >

        <!-- honeybadger package -->

        <receiver android:name=".BootInit" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".HoneyBadgerActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name=".HBTabActivity" />
        
        <activity
            android:name="com.honeybadger.SplashScreen"
            android:noHistory="true" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.honeybadger.HoneyBadgerNotify"/>

        <receiver
            android:name="AlarmReceiver"
            android:process=":remote" >
        </receiver>

        <!-- api package -->

        <service
            android:name=".api.scripts.Scripts"
            android:process=":scriptProc" >
        </service>
        <service
            android:name=".api.scripts.LogScript"
            android:process=":logProc" >
        </service>
        <service
            android:name=".api.scripts.Fetcher"
            android:process=":fetchProc" >
        </service>
        <service android:name="com.honeybadger.api.Blocker" />
        <service android:name="com.honeybadger.api.AppBlocker" />
        <service android:name="com.honeybadger.api.scripts.RequirementsScript" />
        <service android:name="com.honeybadger.api.scripts.ReturnOutput" />

        <!-- views package -->

        <activity android:name="com.honeybadger.views.ViewRulesActivity" />
        <activity android:name=".views.ViewLogActivity" />
        <activity android:name=".views.AddRulesActivity" />
        <activity
            android:name=".views.EditPreferencesActivity"
            android:noHistory="true" />
        <activity
            android:name=".views.ViewRawRulesActivity"
            android:noHistory="true" 
            android:configChanges="orientation"/>
        <activity android:name=".views.ShowAppsActivity" />
    </application>

</manifest>