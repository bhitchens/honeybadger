<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/addRulelabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_pref_header"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/masterRule"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/def_rule"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notelabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_note" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radioBlock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Block All" />

            <RadioButton
                android:id="@+id/radioAllow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Allow All" />
        </RadioGroup>

        <TextView
            android:id="@+id/logRule"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Logging Rule"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radioLogOn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enable Logging" />

            <RadioButton
                android:id="@+id/radioLogOff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Disable Logging" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkAutoUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Auto Update" />
        
        <CheckBox
            android:id="@+id/checkSuppressWarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supwarn_text" />
    </LinearLayout>

</ScrollView>